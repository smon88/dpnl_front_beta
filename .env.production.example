# ============================================
# Devil Panels - Laravel Production Environment
# ============================================
# Copia este archivo como .env en el servidor de produccion
# y reemplaza los valores entre {{ }} con tus valores reales

APP_NAME="Devil Panels"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=America/Bogota
APP_URL=https://panel.{{TU_DOMINIO}}

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_CO

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# ============================================
# Logging
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ============================================
# Database - SQLite
# ============================================
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/devil-panel/database/database.sqlite
# Para SQLite no se necesitan estas variables:
# DB_HOST, DB_PORT, DB_USERNAME, DB_PASSWORD

# ============================================
# Session & Cache - Redis
# ============================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.{{TU_DOMINIO}}
SESSION_SECURE_COOKIE=true

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=devil_panel_

# ============================================
# Redis
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD={{REDIS_PASSWORD}}
REDIS_PORT=6379

# ============================================
# Mail (opcional - configurar segun proveedor)
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@{{TU_DOMINIO}}"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# Backend Node Connection
# ============================================
# NOTA: El backend usa un dominio diferente al panel
# Ejemplo: api.otrodominio.com o backend.otrodominio.com
NODE_BACKEND_URL=https://{{BACKEND_DOMAIN}}
NODE_BACKEND_WS_URL=wss://{{BACKEND_DOMAIN}}
NODE_SHARED_SECRET={{SHARED_SECRET_64_CHARS}}

# ============================================
# Vite / Frontend Assets
# ============================================
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"
VITE_API_URL="${NODE_BACKEND_URL}"
VITE_WS_URL="${NODE_BACKEND_WS_URL}"
